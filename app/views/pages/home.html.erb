<div class="header container text-right">
	<div>
		<h1>Salt Lake Inversion Aversion</h1>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="day">
			<p>Today</p>
		</div>
	</div>
	<div class="row">
		<div class="<%= 'good' if @o3_status == "Good" %> forecast col-md-6 text-center">
			<h1>O3</h1>
			<h2><%= @o3_status %></h2>
			<p>AQI: <%= @o3_aqi %></p>
		</div>
		<div class="<%= 'good' if @o3_status == "Good" %> forecast col-md-6 text-center">
			<h1>PM25</h1>
			<h2><%= @pm25_status %></h2>
			<p>AQI: <%= @pm25_aqi %></p>
		</div>
	</div>
	
	<div class="row">
  		<%= line_chart [
  				{name: "O3", data: @o3_arr},
  				{name: "PM2.5", data: @pm25_arr}
  			],
  			library: {explorer: {}} 
  			%>
	</div>

</div>

<div class="footer container text-right">
	<div>
		<p>Copyright 2015 Ryan Cobb</p>
	</div>
</div>